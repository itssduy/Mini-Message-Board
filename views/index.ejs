<html>
    <body>
        <h1>
            <%= title %>
        </h1>

        <a href="/new"> New post endpoint</a>
        <form method="POST" action="/new">
            <input type="text" placeholder="user" name="messageUser">
            <input type="text" placeholder="message" name="messageText">
            <button>Post Message</button>
        </form>

        <ul>
            <% messages.map((m)=>{ %>
                <li> 
                    <%= m.id %>
                    <%= m.user %> 
                    <%= m.text %> 
                    <%= m.added %> 
                    <a href="/<%=m.id%>">Open message</a>
                </li>
            <% }) %>
        </ul>

        
    </body>
</html>